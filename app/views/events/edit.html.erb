

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
    <%= form_with(model: @event, local: true) do |form| %>

      <div class="form-group">
        <%= form.label :On_commence_quand_? %>
        <%= form.datetime_field :start_date, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :on_y_reste_combien_de_temps_? %>
        <%= form.number_field :duration, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :comment_on_appelle_ton_event_? %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :tell_me_more %>
        <%= form.text_area :description, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :how_much_do_you_want_? %>
        <%= form.number_field :price, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :on_va_où_? %>
        <%= form.text_field :location, class: "form-control" %>
      </div>

        <div class="actions mt-5">
        <%= form.submit "Mettre à jour", class: "btn btn-lg btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
